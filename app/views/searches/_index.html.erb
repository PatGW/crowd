<ul>
  <% @songs.each do |song| %>
    <%= form_tag('/playlists', class: "add-to-playlist-form") do |f| %>
      <%= check_box_tag :add_to_playlist, :class => "add-song-checkbox" %>
      <%= submit_tag "Add to Playlist", id: song["title"], :class => "add-song-submit-btn" %>
      <%= label_tag :add_to_playlist, song["title"] %>
      <%= hidden_field_tag :artist_name, song["artist_name"] %>
      <%= link_to "(remove)", song, method: :delete, data: { confirm: "Are you sure?" }, remote: true %>

    <% end %>
  <% end %>
</ul>